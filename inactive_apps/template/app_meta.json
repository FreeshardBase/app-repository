{
  "v": "1.0",
  "app_version": "0.1.0",
  "name": "<<name>>",
  "icon": "icon.svg",
  "entrypoints": [
    {
      "container_name": "<<name>>",
      "container_port": 80,
      "entrypoint_port": "http"
    }
  ],
  "paths": {
    "": {
      "access": "private",
      "headers": {
        "X-Ptl-Client-Id": "{{ auth.client_id }}",
        "X-Ptl-Client-Name": "{{ auth.client_name }}",
        "X-Ptl-Client-Type": "{{ auth.client_type }}"
      }
    },
    "/share/": {
      "access": "public",
      "headers": {
        "X-Ptl-Client-Type": "{{ auth.client_type }}"
      }
    },
    "/static/": {
      "access": "public",
      "headers": {
        "X-Ptl-Client-Type": "{{ auth.client_type }}"
      }
    },
    "/api/public/": {
      "access": "public",
      "headers": {
        "X-Ptl-Client-Type": "{{ auth.client_type }}"
      }
    }
  },
  "lifecycle": {
    "always_on": false,
    "idle_time_for_shutdown": 3600
  },
  "store_info": {
    "description_short": "$$edit$$",
    "description_long": "$$edit$$",
    "is_featured": false
  }
}
