version: '3.5'

networks:
    portal:
        external: true

services:
    convos:
        restart: always
        image: convos/convos:v7.15
        container_name: convos
        volumes:
        - "{{ fs.app_data }}/data:/data"
        environment:
        - CONVOS_REVERSE_PROXY=1
        - CONVOS_PLUGINS=Convos::Plugin::Auth::Header
        - CONVOS_ADMIN={{ portal.id[:6] }}@example.com
        - CONVOS_AUTH_HEADER=X-Ptl-User
        networks:
        - portal
